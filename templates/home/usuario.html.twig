{% extends 'base.html.twig' %}
{% block titulo %}Descripción del usuario{% endblock%}
{% block contenido %}
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">Descripción detallada del usuario
      <small>Admin</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">
      <div class="col-md-4">
        <h3 class="my-3">Detalles del usuario</h3>
        <ul>
        <li>Nombre: {{(usuario.nombre)}}</li>
        <li>Apellido: {{(usuario.apellido)}}</li>
          <li>Correo electrónico: {{(usuario.correo)}}</li>
          <li>Sexo del usuario: {% if usuario.sexo=='F' %}
              Mujer
              {% else %}
                Hombre

                {% endif %}

          </li>
          <li>Rol: {% if usuario.rol == 1 %}
              Administrador
              {% elseif usuario.rol == 2 %}
              Usuario general
              {% else %}
              Auditor
              {% endif %}
                </li>
        </ul>
      </div>
    </div>

    <!-- Related Projects Row -->
    <h3 class="my-4">Proyectos relacionados</h3>

    <div class="row">

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>
    </div>
  </div>
{% endblock%}
{% extends 'base.html.twig' %}
{% block titulo %}Descripción del proyecto{% endblock%}
{% block contenido %}
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <h1 class="mt-4 mb-3">Descripción detallada del proyecto
      <small>Público</small>
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

      <div class="col-md-8">
        <img class="img-fluid" src="{{asset(proyectoImg~proyecto.imagen)}}" alt="">
      </div>

      <div class="col-md-4">
        <h3 class="my-3">{{proyecto.nombre}}</h3>
        <p> {{proyecto.descripcion}} </p>
        <h3 class="my-3">Detalles del proyecto</h3>
        <ul>
          <li>Fecha de inicio: {{ proyecto.fechaInicio | date('Y-m-d')}}</li>
          <li>Fecha estimada de cierre: {{ proyecto.fechaFinalizacion | date('Y-m-d')}}</li>
          <h5 class="my-3">Integrantes</h5>
          <li>Pepito perez</li>
        </ul>
      </div>

    </div>
    <!-- /.row -->

    <!-- Related Projects Row -->
    <h3 class="my-4">Proyectos relacionados</h3>

    <div class="row">

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>

      <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">
          <img class="img-fluid" src="http://placehold.it/500x300" alt="">
        </a>
      </div>
    </div>
  </div>
{% endblock%}
{% extends 'base.html.twig' %}

{% block titulo %} Nuevo proyecto {% endblock%}

{% block contenido %}
<div class="container">
<h1 class="mt-4 mb-3">Nuevo usuario</h1>
    <div class="row">
        <div class="col-md-12">

            {{ form_start(form) }}
            {{ form_errors(form) }}

        <div class="control-group form-group">
            {{form_label(form.nombre)}}
            {{form_errors(form.nombre)}}
            {{form_widget(form.nombre)}}
        </div>
        <div class="control-group form-group">
            {{form_label(form.apellido)}}
            {{form_errors(form.apellido)}}
            {{form_widget(form.apellido)}}
        </div>
        <div class="control-group form-group">
            {{form_label(form.sexo)}}
            {{form_errors(form.sexo)}}
            {{form_widget(form.sexo)}}
        </div>
        <div class="control-group form-group">
            {{form_label(form.correo)}}
            {{form_errors(form.correo)}}
            {{form_widget(form.correo)}}
        </div>
        <div class="control-group form-group">
            {{form_label(form.password)}}
            {{form_errors(form.password)}}
            {{form_widget(form.password)}}
        </div>
        <div class="control-group form-group">
            {{form_label(form.rol)}}
            {{form_errors(form.rol)}}
            {{form_widget(form.rol)}}
        </div>
        <div>
            {{form_widget(form.guardar)}}
        </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock%}